makedepends=(
  bash-completion
  gi-docgen
  git
  glib2-devel
  gobject-introspection
  meson
  python-docutils
  sysprof
  wayland-protocols
)
provides=(libmutter-17.so mutter)
conflicts=(mutter)
optdepends=('bash-completion: Bash completions for gdctl')
source=(
  # Mutter tags use SSH signatures which makepkg doesn't understand
  "git+$url.git#tag=${pkgver/[a-z]/.&}"
  "git+https://gitlab.gnome.org/GNOME/gvdb.git#commit=466fc22016cf0981424e7121557611942191992f"
  "Add-support-for-tearing.patch"
  "4725.patch"
)
b2sums=(
  '9b58dd2d47d46a067665b044d21ba630c1de8b03b442f2a693c9e5181a8c326527d141512791450c95b80ee15d8a20cf00cce3e820563ab479f97df9085797af'
  'c25796ff54fee353c5fc7a0815c25255b399490148d2bad1f37932d2da66d80561d6e262a5f256c89d142419a504c23eff69f7ef4e65e349f2dea3e0ac0bac1a'
  'a1a9f45057f17067ae1431fbb02b38bbe5cef3eb706f211c67626a1dd1ebb0ce95cabd6895bf7656598dab305cc0f0cf6c4e32461f9dfb75a16bf4733e65b895'
  'aadacca53c8ec7dcb130e073b347dc3c3eaa54f3678d88b5ab6ad5cb2cdad588307f4c2034b92c872e52ead3160e6a418d335e44cbd78a6995cc89e646a74753'
)

prepare() {
  cd mutter

  # https://gitlab.gnome.org/GNOME/mutter/-/merge_requests/2660
  patch -Np1 -i "${srcdir}/Add-support-for-tearing.patch"

  # https://gitlab.gnome.org/GNOME/mutter/-/merge_requests/4725
  patch -Np1 -i "${srcdir}/4725.patch"
}

build() {
  local meson_options=(
    -D docs=false
    -D egl_device=true
    -D devkit=disabled
    -D installed_tests=false
    -D tests=disabled
    -D wayland_eglstream=true
  )

  CFLAGS="${CFLAGS/-O2/-O3} -fno-semantic-interposition"
  LDFLAGS+=" -Wl,-Bsymbolic-functions"

  # Inject gvdb
  export MESON_PACKAGE_CACHE_DIR="$srcdir"

  arch-meson mutter build "${meson_options[@]}"
  meson compile -C build
}

package() {
  meson install -C build --destdir "$pkgdir"
}

